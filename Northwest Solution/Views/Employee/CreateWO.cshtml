
@{
    Layout = "~/Views/Shared/EmpLayout.cshtml";
    ViewBag.Title = "Create Work Order";
}
<style>
    .row {
        margin-top: 2em;
    }
</style>
<h2>Create Work Order</h2>
@using (Html.BeginForm("CreateWO", "Employee", FormMethod.Get))
{
    <fieldset>
        <hr />
        <div class="container">
            <div class="row">
                <div class="col-md-3"><label for="inputTest">Assay to be done </label></div>
                <div class="col-md-3">@Html.DropDownList("tests")</div>
            </div>
            <div class="row align-items-center">
                <div class="col-md-3"><label>May we run additional tests if needed? (Check if yes)</label></div>
                <div class="col-md-3"> @Html.CheckBox("GetQuote", (bool)ViewBag.AddTests)</div>
            </div>
            <div class="row">
                <div class="col-md-3"><label for="inputCompound">Compound Name</label></div>
                <div class="col-md-3"> @Html.TextBox("CompoundName")</div>
            </div>
            <div class="row">
                <div class="col-md-3"><label for="inputEmail"> Weight</label></div>
                <div class="col-md-3"> @Html.TextBox("CompoundName")</div>
            </div>
            <div class="row">
                <div class="col-md-3"><label for="inputEmail">Desired Due Date</label></div>
                <div class="col-md-3"> @Html.TextBox("Due Date")</div>
            </div>
            <div class="row">
                <div class="col-md-3"><label for="inputEmail">Additional Comments</label></div>
                <div class="col-md-3"> @Html.TextArea("Description", null, new { @class = "form-control" })  </div>
            </div>
        </div>
        <div class="container collapse" id="hidden1">
            <hr />
            <div class="row">
                <div class="col-md-3"><label for="inputTest">Assay to be done </label></div>
                <div class="col-md-3">@Html.DropDownList("tests")</div>
            </div>
            <div class="row align-items-center">
                <div class="col-md-3"><label>May we run additional tests if needed? (Check if yes)</label></div>
                <div class="col-md-3"> @Html.CheckBox("GetQuote", (bool)ViewBag.AddTests)</div>
            </div>
            <div class="row">
                <div class="col-md-3"><label for="inputCompound">Compound Name</label></div>
                <div class="col-md-3"> @Html.TextBox("CompoundName")</div>
            </div>
            <div class="row">
                <div class="col-md-3"><label for="inputEmail"> Weight</label></div>
                <div class="col-md-3"> @Html.TextBox("CompoundName")</div>
            </div>
            <div class="row">
                <div class="col-md-3"><label for="inputEmail">Desired Due Date</label></div>
                <div class="col-md-3"> @Html.TextBox("Due Date")</div>
            </div>
            <div class="row">
                <div class="col-md-3"><label for="inputEmail">Additional Comments</label></div>
                <div class="col-md-3"> @Html.TextArea("Description", null, new { @class = "form-control" })  </div>
            </div>
        </div>
        <a href="#hidden1" data-toggle="collapse" class="btn btn-primary btn-sm"> Order Another Compound</a>
        <hr />
        <div class="row">
            <div class="col-sm-offset-5 col-sm-1">
                <p>@Html.ActionLink("Back", "ViewWO", null, null, new { @class = "btn btn-primary btn-primary2 btn-medium" })</p>
            </div>
            <div class="col-sm-1">
                <a class=" btn btn-primary btn-primary2 btn-medium" href="@Url.Action("thankYOU", "Employee")">Submit</a>
            </div>
        </div>
    </fieldset>
}


